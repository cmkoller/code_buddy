<!-- Display Edit/Delete Buttons -->
<% if signed_in? %>
  <% if current_user.id == review.user_id %>
    <%= link_to "Edit Review", edit_review_path(review), class: "button tiny" %>
  <% end %>
  <% if current_user.id == review.user_id || current_user.admin? %>
    <%= link_to "Delete Review", review_path(review), method: :delete,
        class: "button tiny", id: "delete-review" %>
  <% end %>
<% end %>
